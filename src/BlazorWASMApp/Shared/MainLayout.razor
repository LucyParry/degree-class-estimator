@inherits LayoutComponentBase

<nav class="navbar navbar-expand-md bg-dark navbar-dark justify-content-between">

    <!-- Brand -->
    <div class="nav-title">
        <a class="navbar-brand" href="#">
            <span class="navbar-title-emoji" @onclick=RotateEmoji>@HeaderEmoji</span><span class="navbar-title-text">OU Degree Class Estimator</span>
        </a>
    </div>

    <!-- Toggler/collapsibe Button -->
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Navbar links -->
    <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" href="~/help">Help</a>
            </li>
        </ul>
    </div>
</nav>

<div class="main-body">
    <div class="row">
        <div class="col-md-12">
            @Body
        </div>
    </div>
</div>

@code
{
    [Parameter]
    public string ModulesEncodedString { get; set; }

    private string HeaderEmoji { get; set; }

    List<string> availableEmoji = new List<string>() {
        "🎓", "🐌", "📚", "🧠", "💾", "🐓", "☕", "👽", "💣", "🦍", "🦊", "🌵", "🦄", "🐊", "🐉", "🐳", "🍉", "🥝", "🥑", "🦑", "🍰", "🍺", "🔥"
    };

    protected override void OnInitialized()
    {
        HeaderEmoji = "🎓";
    }

    void RotateEmoji()
    {
        Random randomGen = new Random();
        HeaderEmoji = availableEmoji[randomGen.Next(availableEmoji.Count - 1)];
    }

}
