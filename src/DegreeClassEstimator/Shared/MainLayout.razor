@inherits LayoutComponentBase

<div class="page">
    <main>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand ml-4" href="#">
                    <span class="navbar-title-emoji" @onclick=RotateEmoji>@HeaderEmoji</span>
                    OU Degree Class Estimator
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end mr-4" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">Home</NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="help">Help</NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="about">About</NavLink>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code
{
    private string? HeaderEmoji { get; set; }

    List<string> availableEmoji = new List<string>() {
        "🎓", "🐌", "📚", "🧠", "💾", "🐓", "☕", "👽", "💣", "🦍", "🦊", "🌵", "🦄", "🐊", "🐉", "🐳", "🍉", "🥝", "🥑", "🦑", "🍰", "🍺", "🔥"
    };

    protected override void OnInitialized()
    {
        HeaderEmoji = availableEmoji[0];
    }

    void RotateEmoji()
    {
        Random randomGen = new Random();
        HeaderEmoji = availableEmoji[randomGen.Next(availableEmoji.Count - 1)];
    }
}
